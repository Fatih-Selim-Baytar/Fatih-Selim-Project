dy= int(input("Doğduğunuz yıl : "))
if (dy <= 1923):
    print("Lütfen Doğru giriniz.")
    dy= int(input("Doğduğunuz yıl : "))

bg = int(input("Şuan Ayın kaçı : "))
if (bg >= 31):
