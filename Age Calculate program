isim = input("İsminizi girin : ")
soy = input("Soy İsminizi Girin : ")


ay = [[0,"anan"],[1,"ocak"],[2,"şubat"],[3,"mart"],[4,"nisan"],[5,"mayıs"],[6,"haziran"],[7,"temmuz"],[8,"ağustos"],[9,"eylül"],[10,"ekim"],[11,"kasım"],[12,"aralık"]]


